<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.momomo.myapplication">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".utils.saveVarible"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SportActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login_activity.login" />
        <activity android:name=".home" />
        <activity android:name=".login_activity.tologin" />
        <activity android:name=".food_activity.food" />
        <activity android:name=".food_activity.addfood" />
        <activity android:name=".note_activity.note" />
        <activity android:name=".note_activity.addnote" />
        <activity android:name=".chart_activity.chartTest" />
        <activity android:name=".ceshi.running" />
        <activity android:name=".ceshi.scan_activity" />
        <activity android:name=".mine_activity.mine" />
        <activity android:name=".mine_activity.mine_set" />
        <activity
            android:name=".activities.ScanBandActivity"
            android:label="@string/label_pair_band"
            android:parentActivityName=".activities.SportActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ExportDataActivity"
            android:label="@string/label_export_data"
            android:parentActivityName=".activities.SportActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".services.CommService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>