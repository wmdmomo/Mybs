<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable name="connected" type="boolean" />
        <variable name="heartRate" type="int" />
        <variable name="step" type="int" />
        <variable name="battery" type="int" />

        <variable name="connectTransaction" type="com.example.momomo.myapplication.activities.SportActivity.Transaction" />
        <variable name="heartRateTransaction" type="com.example.momomo.myapplication.activities.SportActivity.Transaction" />
        <variable name="stepTransaction" type="com.example.momomo.myapplication.activities.SportActivity.Transaction" />
        <variable name="batteryTransaction" type="com.example.momomo.myapplication.activities.SportActivity.Transaction" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mine_bar"
            android:elevation="4dp"
            >
            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:id="@+id/mine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:layout_anchor="@id/control_panel"
            app:layout_anchorGravity="top|start">

            <com.github.jorgecastilloprz.FABProgressCircle
                android:id="@+id/fab_progress_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:arcColor="@color/purple"
                app:reusable="true">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:onClick="@{() -> connected ? connectTransaction.stop() : connectTransaction.start()}"
                    android:src="@{connected ? @drawable/ic_bluetooth_connected_white_24dp : @drawable/ic_bluetooth_disabled_white_24dp}" />

            </com.github.jorgecastilloprz.FABProgressCircle>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- information view -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="@{connected ? View.VISIBLE : View.INVISIBLE}">

                <!-- Heart rate view -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/label_heart_rate"
                    android:padding="16dp"
                    android:text="@{Integer.toString(heartRate)}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:visibility="@{heartRateTransaction.running ? (heartRate > 0 ? View.VISIBLE : View.INVISIBLE) : View.GONE}"
                    tools:text="65" />

                <!--STEP-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/label_step_rate"
                    android:padding="16dp"
                    android:text="@{Integer.toString(step)}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:visibility="@{stepTransaction.running ? (step >= 0 ? View.VISIBLE : View.INVISIBLE) : View.GONE}"
                    tools:text="65" />

                <!--BATTERY-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/label_battery"
                    android:padding="16dp"
                    android:text="@{Integer.toString(battery)}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:visibility="@{batteryTransaction.running ? (battery >= 0 ? View.VISIBLE : View.INVISIBLE) : View.GONE}"
                    tools:text="65" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/control_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingTop="40dp"
                android:paddingEnd="32dp"
                android:paddingBottom="16dp">

                <!-- Heart rate control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@{heartRateTransaction.running ? @string/switch_heart_rate_on : @string/switch_heart_rate_off}" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@{heartRateTransaction.running}"
                        android:enabled="@{connected}"
                        android:onCheckedChanged="@{(cb, checked) -> checked ? heartRateTransaction.start() : heartRateTransaction.stop()}"
                        android:switchMinWidth="56dp" />
                </LinearLayout>


                <!--step control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@{stepTransaction.running ? @string/switch_step_on : @string/switch_step_off}" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@{stepTransaction.running}"
                        android:enabled="@{connected}"
                        android:onCheckedChanged="@{(cb, checked) -> checked ? stepTransaction.start() : stepTransaction.stop()}"
                        android:switchMinWidth="56dp" />
                </LinearLayout>

                <!--battery control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@{batteryTransaction.running ? @string/switch_battery_on : @string/switch_battery_off}" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@{batteryTransaction.running}"
                        android:enabled="@{connected}"
                        android:onCheckedChanged="@{(cb, checked) -> checked ? batteryTransaction.start() : batteryTransaction.stop()}"
                        android:switchMinWidth="56dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>