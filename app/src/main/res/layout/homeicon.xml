<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:padding="16dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/item_title"
                    android:text="每日打卡"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/item_size"
                    android:textSize="25dp"
                    android:text="123"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_danwei"
                    android:text="公斤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
       ></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="8dp">
            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/jindu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                custom:progress_unreached_color="#e7e6e9"
                custom:progress_reached_color="#9ebebd"

                custom:progress_unreached_bar_height="4dp"
                custom:progress_reached_bar_height="4dp"

                custom:progress_text_size="15dp"
                custom:progress_text_color="#c9c9cb"
                custom:progress_text_offset="0dp"
                custom:progress_text_visibility="visible"

                custom:progress_max="100"
                custom:progress_current="5"
                />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
